function email_form_form() {
	$query = db_select('users', 'u');
	$query -> condition('u.uid', explode(',', arg(4)), 'in');
	$query -> fields('u', array(
		'mail',
		'name'
	));
	$results = $query -> execute();

	$email = '';
	$name = '';
	$first = true;
	foreach ($results as $result) {
		if ($first) {
			$email .= $result -> mail;
			$first = false;
			continue;
		}
		$email .= ',' . $result -> mail;
		$name = $result -> name;
	}
  return email_form_gen($name, $email, arg(2), arg(3));
}

