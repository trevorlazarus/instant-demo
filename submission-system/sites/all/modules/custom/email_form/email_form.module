/*
 * Returns an array of arrays of size 3, contains sets of nid, vid, uid.
 */
function get_arg_groups() {
	$groups = array();
	$i = 2;
	$loop = true;
	while (arg($i) && $loop) {

		if (!arg($i) || !arg($i + 1) || !arg($i + 2)) {
			$loop = false;
		} else {
			$groups[] = array(
				arg($i),
				arg($i + 1),
				arg($i + 2)
			);
		}

		$i += 3;
	}

	return $groups;
}

